extends ../layout

block content
  -const { patrons, pageUrl, search, pagination } = templateData;
  div.title-header
    h1 Patrons
    a.button(href='/patrons/new') Create New Patron

  include ../includes/search

  table
    thead
      tr
        th Name
        th Address
        th Email
        th Library ID
        th Zip
    tbody
      if patrons.length
        each patron in patrons
          - const { id, first_name, last_name, address, email, library_id, zip_code } = patron;
          tr
            td
              a(href=`/patrons/${id}`) #{first_name} #{last_name}
            td= address
            td= email
            td= library_id
            td= zip_code
      else
        tr
          td(colspan=4) No Results
    tfoot
      tr
        td.pagination-cell(colspan=4)
          include ../includes/pagination