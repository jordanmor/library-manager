extends ../layout

block content
  h1 Patron: Return Book

  include ../includes/errors
  
  p
    strong Book Title: 
    | #{loan.Book.title}
  p
    strong Loaned By: 
    | #{loan.Patron.first_name} #{loan.Patron.last_name}
  p
    strong Loaned On: 
    | #{loan.loaned_on}
  p
    strong Return By: 
    | #{loan.return_by}

  form(action=`/loans/${loan.id}/return?_method=PUT` method='post')
    p
      label(for='returned_on') Returned on:
      input#returned_on(type='text' name='returned_on' value=date)
    p
      input(type='submit' value='Return Book')