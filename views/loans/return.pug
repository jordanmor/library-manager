extends ../layout

block content
  -const { loaned_on, return_by, Book, Patron } = loan;
  h1 Patron: Return Book

  include ../includes/errors
  
  p
    strong Book Title: 
    | #{Book.title}
  p
    strong Loaned By: 
    | #{Patron.first_name} #{Patron.last_name}
  p
    strong Loaned On: 
    | #{loaned_on}
  p
    strong Return By: 
    | #{return_by}

  form(action=`/loans/${loan.id}/return?_method=PUT` method='post')
    p
      label(for='returned_on') Returned on:
      input#returned_on(type='text' name='returned_on' value=date)
    p
      input(type='submit' value='Return Book')